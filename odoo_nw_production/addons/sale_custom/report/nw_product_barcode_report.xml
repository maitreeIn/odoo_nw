<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_report_nw_product_barcode" model="ir.actions.report">
        <field name="name">Product Barcode (PDFx)</field>
        <field name="model">nw.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_custom.report_nw_product_barcode</field>
        <field name="report_file">sale_custom.report_nw_product_barcode</field>
        <field name="print_report_name">'Barcode - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_nw_product"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_nw_product_barcode">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="text-center" style="page-break-inside: avoid; margin-top: 20px; border: 1px solid #ccc; padding: 20px; border-radius: 10px;">
                            <h2 t-field="o.name"/>
                            <h3 t-if="o.default_code">
                                [<span t-field="o.default_code"/>]
                            </h3>
                            
                            <div class="mt-4 mb-4">
                                <!-- Use Odoo's built-in barcode generator -->
                                <img t-if="o.barcode" 
                                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.barcode, 600, 150)" 
                                     style="width: 300px; height: 75px;"/>
                                <div t-if="o.barcode" class="mt-2" style="font-size: 1.2em; letter-spacing: 2px;">
                                    <span t-field="o.barcode"/>
                                </div>
                            </div>
                            
                            <h2 class="mt-2">
                                Price: <span t-field="o.sale_price" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/>
                            </h2>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
