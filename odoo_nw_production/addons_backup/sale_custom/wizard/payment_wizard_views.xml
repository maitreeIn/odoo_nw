<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_nw_account_payment_wizard_form" model="ir.ui.view">
        <field name="name">nw.account.payment.wizard.form</field>
        <field name="model">nw.account.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="ชำระเงิน">
                <group>
                    <field name="amount"/>
                </group>
                <footer>
                    <button name="action_confirm_payment" string="ยืนยัน" type="object" class="btn-primary"/>
                    <button string="ยกเลิก" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_payment_wizard" model="ir.actions.act_window">
        <field name="name">ชำระเงิน</field>
        <field name="res_model">nw.account.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> </record>
</odoo>
